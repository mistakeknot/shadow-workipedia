{
  "name": "shadow-workipedia",
  "version": "0.1.0",
  "type": "module",
  "description": "Interactive visualization of Shadow Work's interconnected global issues and systems",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:full": "pnpm extract-data && tsc && vite build",
    "preview": "vite preview",
    "preview:full": "pnpm build:full && vite preview",
    "extract-data": "node --import tsx scripts/extract-data.ts",
    "generate:mechanics": "node --import tsx scripts/generate-mechanics-wiki.ts",
    "normalize:mechanics": "node --import tsx scripts/normalize-mechanics-wiki.ts",
    "fill:mechanics": "node --import tsx scripts/fill-mechanics-wiki.ts",
    "audit:mechanics": "node --import tsx scripts/audit-mechanics-coverage.ts",
    "backfill:issue-mechanics": "node --import tsx scripts/backfill-issue-mechanics.ts",
    "typecheck": "tsc --noEmit",
    "test:narration": "node --import tsx scripts/test-narration.ts",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/d3-force": "^3.0.10",
    "@types/d3-polygon": "^3.0.2",
    "@types/d3-quadtree": "^3.0.6",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-selection": "^3.0.11",
    "@types/d3-zoom": "^3.0.8",
    "@types/node": "^20.10.0",
    "@types/tracery-grammar": "^2.7.4",
    "husky": "^9.1.7",
    "terser": "^5.44.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.20",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "d3-force": "^3.0.0",
    "d3-polygon": "^3.0.1",
    "d3-quadtree": "^3.0.1",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-zoom": "^3.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1",
    "tracery-grammar": "^2.8.4"
  }
}
